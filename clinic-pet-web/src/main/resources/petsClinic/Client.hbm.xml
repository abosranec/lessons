<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="petsClinic">
    <class name="petsClinic.Client" table="Clients">
        <meta attribute="class-description">
            This class contains the clients detail.
        </meta>
        <id name="id" type="int" column="clientID">
            <generator class="identity"/>
        </id>
        <property name="name" column="clientName" type="string" not-null="true"/>
        <property name="sex" column="sex" type="string" not-null="true"/>
        <property name="city" column="city" type="string" not-null="true"/>
        <property name="address" column="address" type="string"/>
        <property name="phone" column="phone" type="string" not-null="true"/>
        <property name="mail" column="mail" type="string" not-null="true"/>
        <list name="pets" table="pets" lazy="true" inverse="true" cascade="all">
            <key column="clientID" not-null="true"/>
            <list-index column = "petID"/>
            <one-to-many class="petsClinic.Pet"/>
        </list>
    </class>
</hibernate-mapping>